{
    "trailingComma": "es5",
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.php"],
            "options": {
                "printWidth": 120
            }
        },
        {
            "files": [
                "resources/assets/js/blocks/*",
                "resources/assets/js/components/*"
            ],
            "options": {
                "tabWidth": 2,
                "semi": false
            }
        }
    ]
}
